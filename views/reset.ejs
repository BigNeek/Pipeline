<% include ./partials/header %>

<div class="jumbotron">
  <h1>Welcome to Pipeline!</h1>
  <p>Log in to keep track of your candidates with ease.</p>
</div>


<div id="loginDiv">
    <h1 id="loginh1">Reset Password</h1>
    <hr>
    <form action="/reset/<%= user.resetPasswordToken %>" method="POST" id="loginForm">
        <div class="form-group">
            <input class="loginTxt" type="password" name="password" placeholder="New password">
        </div>
        <div class="form-group">
            <input class="loginTxt" type="password" name="confirm" placeholder="Confirm password">
        </div>
        <div id="buttonHolder">
            <button class="btn btn-primary btn-lg">Reset</button>
        </div>
    </form>
</div>



<% include ./partials/footer %>