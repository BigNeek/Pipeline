<% include ./partials/header %>

<div class="jumbotron">
  <h1>Welcome to Pipeline!</h1>
  <p>Log in to keep track of your candidates with ease.</p>
</div>

<div id="loginDiv">
    <h1 id="loginh1">Log In</h1>
    <hr>
    <form action="/login" method="POST" id="loginForm">
        <div class="form-group">
            <input class="loginTxt" type="email" name="username" placeholder="email">
        </div>
        <div class="form-group">
            <input class="loginTxt" type="password" name="password" placeholder="password">
        </div>
        <div id="buttonHolder">
            <button class="btn btn-primary btn-lg">Sign In</button>
        </div>
        <div id="aHolder">
            <a href="/register">Sign Up</a>
        </div>
    </form>
</div>


<% include ./partials/footer %>